<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical"
    android:padding="@dimen/widget_margin"
    android:clipChildren="true"
    android:background="@drawable/shape">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:orientation="vertical"
            android:padding="8dp"
            android:gravity="left"
            >
            <ImageView
                android:layout_height="50dp"
                android:layout_width="50dp"
                android:src="@drawable/area_digi"

                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:orientation="vertical"
            android:padding="8dp"
            android:gravity="center"
            >
            <TextView
                android:id="@+id/num_telf_widget"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"



                android:contentDescription="descripcion"
                android:text=""
                android:textColor="#027FA8"
                android:textSize="22dp"
                android:textStyle="italic|bold"
                />
            <TextView
                android:id="@+id/fecha_widget"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"



                android:contentDescription="descripcion"
                android:text="Hasta: "
                android:textColor="#027FA8"
                android:textSize="14dp"
                android:textStyle="italic"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:orientation="vertical"
            android:padding="8dp"
            android:gravity="right"

            >

            <Button
                android:id="@+id/refrescarWidget"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:background="@drawable/update" />

        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"

        android:background="#09C"
        >

        <TextView
            android:id="@+id/internet_widget"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"



            android:contentDescription="descripcion"
            android:text=""
            android:textColor="#FFFFFF"
            android:textSize="24dp"
            android:textStyle="bold|italic"
            />
        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"



            android:contentDescription="descripcion"
            android:text="MB"
            android:textColor="#FFFFFF"
            android:textSize="18dp"
            android:textStyle="italic"
            />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:background="#09C"
        >
        <TextView
            android:id="@+id/minutos_widget"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"


            android:contentDescription="descripcion"
            android:text=""
            android:textColor="#FFFFFF"
            android:textSize="24dp"
            android:textStyle="bold|italic"

            tools:visibility="visible" />
        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"



            android:contentDescription="descripcion"
            android:text="minutos"
            android:textColor="#FFFFFF"
            android:textSize="18dp"
            android:textStyle="italic"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"

        >


        <TextView
            android:id="@+id/euros_widget"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="6dp"

            android:contentDescription="descripcion"
            android:text=""
            android:textColor="#09C"
            android:textSize="20dp"
            android:textStyle="bold|italic"

            tools:visibility="visible" />
    </LinearLayout>


</LinearLayout>